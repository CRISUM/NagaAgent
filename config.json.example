{
  "system": {
    "version": "3.0",                    // 系统版本号
    "voice_enabled": true,               // 是否启用语音功能（语音识别和TTS）
    "stream_mode": true,                 // 是否启用流式响应模式
    "debug": true,                       // 是否启用调试模式（显示详细日志）
    "log_level": "INFO"                  // 日志级别：DEBUG/INFO/WARNING/ERROR/CRITICAL
  },
  
  "api": {
    "api_key": "your_api_key_here",      // LLM API密钥
    "base_url": "http://localhost:11434/v1",  // API基础URL（本地Ollama服务）
    "model": "qwen3:32b",                // 使用的模型名称
    "temperature": 0.7,                  // 温度参数（0.0-2.0，控制输出随机性）
    "max_tokens": 2048,                  // 最大输出token数
    "max_history_rounds": 10,            // 最大历史对话轮数
    "top_p": 0.95,                       // Top-p采样参数（0.0-1.0）
    "timeout": 30,                       // API请求超时时间（秒）
    "retry_count": 3                     // API请求重试次数
  },
  
  "api_server": {
    "enabled": true,                     // 是否启用API服务器
    "host": "127.0.0.1",                 // API服务器监听地址
    "port": 8000,                        // API服务器端口
    "auto_start": true,                  // 启动时自动启动API服务器
    "docs_enabled": true                 // 是否启用API文档（Swagger UI）
  },
  
  "grag": {
    "enabled": true,                     // 是否启用GRAG记忆系统
    "auto_extract": true,                // 是否自动提取对话中的三元组
    "context_length": 5,                 // 记忆上下文长度
    "similarity_threshold": 0.6,         // 记忆检索相似度阈值（0.0-1.0）
    "neo4j_uri": "neo4j://127.0.0.1:7687",  // Neo4j数据库连接URI
    "neo4j_user": "neo4j",               // Neo4j用户名
    "neo4j_password": "your_password",   // Neo4j密码
    "neo4j_database": "neo4j"            // Neo4j数据库名
  },
  
  "handoff": {
    "max_loop_stream": 5,                // 流式模式最大工具调用循环次数
    "max_loop_non_stream": 5,            // 非流式模式最大工具调用循环次数
    "show_output": false                 // 是否显示工具调用输出
  },
  
  "browser": {
    "path": null,                        // 浏览器可执行文件路径（null为自动检测）
    "playwright_headless": false         // Playwright浏览器是否无头模式
  },
  
  "tts": {
    "api_key": "your_tts_api_key_here",  // TTS服务API密钥
    "port": 5050,                        // TTS服务端口
    "default_voice": "en-US-AvaNeural",  // 默认语音
    "default_format": "mp3",             // 默认音频格式
    "default_speed": 1.0,                // 默认语速（0.1-3.0）
    "default_language": "en-US",         // 默认语言
    "remove_filter": false,              // 是否移除过滤
    "expand_api": true,                  // 是否扩展API
    "require_api_key": true              // 是否需要API密钥
  },
  
  "quick_model": {
    "enabled": true,                     // 是否启用小模型
    "api_key": "",                       // 小模型API密钥
    "base_url": "https://ark.cn-beijing.volces.com/api/v3",  // 小模型API地址
    "model_name": "doubao-seed-1-6-flash-250615",  // 小模型名称
    "max_tokens": 512,                   // 小模型输出限制
    "temperature": 0.05,                 // 小模型温度参数
    "timeout": 5,                        // 快速响应超时时间（秒）
    "max_retries": 2                     // 最大重试次数
  },
  
  "ui": {
    "user_name": "用户",                 // 默认用户名
    "bg_alpha": 0.5,                     // 聊天背景透明度（0.0-1.0）
    "window_bg_alpha": 110,              // 主窗口背景透明度（0-255）
    "mac_btn_size": 36,                  // Mac按钮大小
    "mac_btn_margin": 16,                // Mac按钮边距
    "mac_btn_gap": 12,                   // Mac按钮间距
    "animation_duration": 600            // 动画时长（毫秒）
  }
} 